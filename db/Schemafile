create_table :categories do |t|
  t.integer  :keyword, null: false, default: ""
  t.integer  :name,    null: false, default: ""
end

create_table :category_classifies do |t|
  t.integer  :site_id,     null: false
  t.integer  :classify_id, null: false
end

create_table :classifies do |t|
  t.string   :keyword, null: false, default: ""
  t.string   :name,    null: false, default: ""
end

create_table :sites do |t|
  t.integer  :category_id, null: false
  t.string   :root_url,    null: false, default: ""
  t.string   :site_name,   null: false, default: ""
end

create_table :sharings do |t|
  t.integer  :site_id, null: false
end

create_table :sharing_elements do |t|
  t.integer  :sharing_id,  null: false
  t.integer  :classify_id, null: false
  t.string   :value,       null: false, default: ""
end